@model ModelCart

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Домашная страница</a></li>
                <li class="active">Карзина</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Товар</td>
                        <td class="description"></td>
                        <td class="price">Цена</td>
                        <td class="Количество">Количество</td>
                        <td class="total">Сумма</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemInCart)
                    {
                        <tr>
                            <td class="cart_product">
                                <a href=""><img src="~/images/cart/@item.Pic" alt=""></a>
                            </td>
                            <td class="cart_description">
                                <h4><a href="">@item.Name</a></h4>
                                <p>Индентификатор: @item.ID</p>
                            </td>
                            <td class="cart_price">
                                <p>@item.Priсe</p>
                            </td>
                            <td class="cart_Количество">
                                <div class="cart_Количество_button">
                                    <a class="cart_Количество_up" href=""> + </a>
                                    <input class="cart_Количество_input" type="text" name="Количество" value="1" autocomplete="off" size="2">
                                    <a class="cart_Количество_down" href=""> - </a>
                                </div>
                            </td>
                            <td class="cart_total">
                                <p class="cart_total_price">@item.Priсe</p>
                            </td>
                            <td class="cart_delete">
                                <a class="cart_Количество_delete" href=""><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->